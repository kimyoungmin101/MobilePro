<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow>

        <EditText
            android:id="@+id/edit1"
            android:layout_width="387dp"
            android:layout_height="match_parent"
            android:layout_span="5"
            android:hint="숫자 입력란" />
    </TableRow>

    <TableRow>

        <EditText
            android:id="@+id/edit2"
            android:layout_width="397dp"
            android:layout_height="match_parent"
            android:layout_span="5"
            android:hint="숫자 입력란" />
    </TableRow>

    <TableRow>
        <Button
            android:id = "@+id/btn1"
            android:text = "0"/>
        <Button
            android:id = "@+id/btn2"
            android:text = "1"/>
        <Button
            android:id = "@+id/btn3"
            android:text = "2"/>
        <Button
            android:id = "@+id/btn4"
            android:text = "3"/>
        <Button
            android:id = "@+id/btn5"
            android:text = "4"/>
    </TableRow>

    <TableRow>
        <Button
            android:id = "@+id/btn6"
            android:text = "5"/>
        <Button
            android:id = "@+id/btn7"
            android:text = "6"/>
        <Button
            android:id = "@+id/btn8"
            android:text = "7"/>
        <Button
            android:id = "@+id/btn9"
            android:text = "8"/>
        <Button
            android:id = "@+id/btn0"
            android:text = "9"/>
    </TableRow>

    <TableRow>
        <Button
            android:id = "@+id/add"
            android:layout_span="5"
            android:text = "더하기" />
    </TableRow>

    <TableRow>
        <Button
            android:id = "@+id/sub"
            android:layout_span="5"
            android:text = "빼기" />
    </TableRow>

    <TableRow>
        <Button
            android:id = "@+id/mul"
            android:layout_span="5"
            android:text = "곱하기" />
    </TableRow>

    <TableRow>
        <Button
            android:id = "@+id/div"
            android:layout_span="5"
            android:text = "나누기" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/tex1"
            android:layout_span="5"
            android:textSize = "20dp"
            android:text = "계산 결과"
            android:textColor="#FF0000"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="돌아가기" />
    </TableRow>


</TableLayout>